<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inpheller.moneytor.app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.inpheller.moneytor.app.screen.search.SmsSearchScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTop"
            android:label="@string/app_name">

            <!-- android:theme="@style/FullscreenTheme" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.inpheller.moneytor.app.screen.rules.RuleEditorScreen"
            android:label="@string/title_activity_rule_editor_screen"></activity>
        <activity
            android:name="com.inpheller.moneytor.app.screen.rules.RuleTestScreen"
            android:label="@string/title_activity_rule_test_screen"></activity>
    </application>

    <uses-permission android:name="android.permission.READ_SMS" />

</manifest>
