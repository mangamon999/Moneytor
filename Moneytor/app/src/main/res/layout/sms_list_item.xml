<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/placeholder_thumbnail"
        android:contentDescription="@string/contact_thumbnail_description" />

    <TextView
        android:id="@+id/sender"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sender:14999"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/message"
        android:layout_below="@+id/sender"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:text="Lorem ipsum dolor sit amet, arcu erat ut nunc, justo porta interdum blandit ut. Donec metus fringilla nec pede"
        android:ellipsize="end"
        android:textSize="15sp"/>

</RelativeLayout>